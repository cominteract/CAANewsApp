<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item android:id="@+id/darker_shadow">
        <shape>

            <padding
                android:bottom="3.6dp"
                android:left="3.6dp"
                android:right="3.6dp"
                android:top="3.6dp" />

            <solid android:color="#00cccccc" />

            <corners android:radius="@dimen/spacing_xxx_large" />
        </shape>
    </item>
    <item android:id="@+id/dark_shadow">
        <shape>
            <padding
                android:bottom="3.2dp"
                android:left="3.2dp"
                android:right="3.2dp"
                android:top="3.2dp" />

            <solid android:color="#05cccccc" />

            <corners android:radius="@dimen/spacing_xxx_large" />
        </shape>
    </item>
    <item android:id="@+id/medium_shadow">
        <shape>
            <padding
                android:bottom="2.8dp"
                android:left="2.8dp"
                android:right="2.8dp"
                android:top="2.8dp" />

            <solid android:color="#0a0000cc" />

            <corners android:radius="@dimen/spacing_xxx_large" />
        </shape>
    </item>
    <item android:id="@+id/light_shadow">
        <shape>
            <padding
                android:bottom="2.4dp"
                android:left="2.4dp"
                android:right="2.4dp"
                android:top="2.4dp" />

            <solid android:color="#0fcccccc" />

            <corners android:radius="@dimen/spacing_xxx_large" />
        </shape>
    </item>
    <item android:id="@+id/lighter_shadow">
        <shape>
            <padding
                android:bottom="@dimen/spacing_xx_small"
                android:left="@dimen/spacing_xx_small"
                android:right="@dimen/spacing_xx_small"
                android:top="@dimen/spacing_xx_small" />

            <solid android:color="#14cccccc" />
            <corners android:radius="@dimen/spacing_xxx_large" />
        </shape>
    </item>
</layer-list>