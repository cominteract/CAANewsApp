<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="300dp"
    android:maxWidth="300dp"
    android:paddingBottom="@dimen/spacing_large"
    android:background="@drawable/bg_rounded_dialog"
    tools:context=".dialog.ConfirmationDialogFragment">

    <com.google.android.material.textview.MaterialTextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Text.Title"
        android:id="@+id/text_confirmation_title"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="@string/text_confirmation_info_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" >
    </com.google.android.material.textview.MaterialTextView>
    <com.google.android.material.imageview.ShapeableImageView
        app:layout_constraintTop_toBottomOf="@id/text_confirmation_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_large"
        android:id="@+id/image_confirmation"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <com.google.android.material.textview.MaterialTextView
        app:layout_constraintTop_toBottomOf="@id/image_confirmation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Text.Heading.2"
        android:id="@+id/text_confirmation_caption"
        android:layout_marginHorizontal="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="0dp"  />
    <com.google.android.material.button.MaterialButton
        app:layout_constraintTop_toBottomOf="@id/text_confirmation_caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/button_dismiss"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/Button.Primary"
        android:text="@string/text_confirmation_dismiss" />


</androidx.constraintlayout.widget.ConstraintLayout>